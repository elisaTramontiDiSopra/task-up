  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && webpack --config webpack.prod.config.js --env.production --progress --profile",
    "build:sourcemap": "npm run clean && webpack --config webpack.prod.config.js --env.sourcemap --env.production --progress --profile",
    "preview": "cd dist && ws --spa index.html",
    "server": "webpack-dev-server --env.development --env.PORT=3000 --config webpack.dev.config.js",
    "start": "npm run server",
    "start:hmr": "npm run server -- --hot --env.HMR"
  },
